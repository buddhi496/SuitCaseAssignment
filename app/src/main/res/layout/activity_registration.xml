<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/signUpImage"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/rounded_image_background"
        android:contentDescription="@string/login_image_description"
        android:scaleType="centerCrop"
        android:src="@drawable/signup" />


    <TextView
        android:id="@+id/createAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create a new account"
        android:layout_below="@id/signUpImage"
        android:textSize="30dp"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        android:textStyle="bold"
        android:fontFamily="@font/playfair"/>

    <TextView
        android:id="@+id/signUpText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signup to your account"
        android:textSize="14sp"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        android:textStyle="bold"
        android:layout_below="@id/createAccount"
        android:fontFamily="@font/playfair"
        android:alpha="0.6" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/signUpText"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="15sp"
        android:background="@drawable/edittext_border_background"
        android:hint="Full Name"
        android:inputType="textEmailAddress"
        android:textSize="12sp"
        android:padding="10sp" />

    <EditText
        android:id="@+id/userEmail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/userName"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15sp"
        android:background="@drawable/edittext_border_background"
        android:hint="Your Email"
        android:inputType="textEmailAddress"
        android:textSize="12sp"
        android:padding="10sp" />

    <EditText
        android:id="@+id/userPassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/userEmail"
        android:layout_marginTop="16dp"
        android:padding="10sp"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="12sp"
        android:background="@drawable/edittext_border_background" />

    <EditText
        android:id="@+id/conformPassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/userPassword"
        android:layout_marginTop="16dp"
        android:padding="10sp"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        android:hint="Retype Password"
        android:inputType="textPassword"
        android:textSize="12sp"
        android:background="@drawable/edittext_border_background" />

    <CheckBox
        android:id="@+id/termsAndCondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/conformPassword"
        android:text="I accept the terms and services."
        android:gravity="center_vertical|center_horizontal"
        android:textSize="16dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:checked="false"/>

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/termsAndCondition"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="1dp"
        android:padding="15dp"
        android:textSize="18sp"
        android:text="Sign Up"
        android:backgroundTint="@color/buttonBackground"
        android:fontFamily="@font/playfair" />

    <RelativeLayout
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signUpButton"
        android:layout_marginRight="15sp"
        android:layout_marginLeft="15sp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have a account?"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/signInNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="SignIn Now"
                android:textColor="@color/buttonBackground"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>