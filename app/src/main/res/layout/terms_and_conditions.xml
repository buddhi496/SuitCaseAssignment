<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".RegistrationActivity">

    <TextView
        android:id="@+id/termsAndConditionsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terms and Conditions"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/termsAndConditionsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@id/termsAndConditionsTitle"
        android:text="These are the terms and conditions of using the Suitcase app. Please read them carefully before proceeding."
        android:textSize="16sp"
        android:layout_marginTop="16dp"/>

    <!-- Add your terms and conditions text here -->
    <TextView
        android:id="@+id/termsAndConditionsContent1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/termsAndConditionsText"
        android:textColor="@color/black"
        android:text="1. Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/termsAndConditionsContent2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/termsAndConditionsContent1"
        android:textColor="@color/black"
        android:text="2. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/termsAndConditionsContent2"
        android:layout_marginTop="19dp"
        android:textColor="@color/black"
        android:text="Close" />

</RelativeLayout>